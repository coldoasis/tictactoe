<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/image/shopping.png" alt="logo" width="80" height="60" class="d-inline-block align-top" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse leftnav">
                    <div id="mypurchases">
                        <a class="nav-item nav-link" href="/Home/Purchases">My Purchases</a>
                    </div>
                    @if ((string)TempData["IsLoggedIn"] == "true")
                    {
                        <div>
                            <a id="logout-btn" class="nav-item nav-link" href="/Home/Logout">Logout</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a id="login-btn" class="nav-item nav-link" href="/Home/Login">Login</a>
                        </div>
                    }
                    <div id="cart" class="nav-item">
                        <a href="/Home/Cart" class="nav-link">
                            <img src="~/image/cart.png" alt="cart-logo" class="cartimage" />
                            <div id="cartAmount" class="cartAmount">
                                <span id="cart-count">@Context.Session.GetInt32("CartCount")</span>
                            </div>
                        </a>

                    </div>
                    <div id="profile" class="nav-item">
                        <a class="nav-link" href="#">
                            <img src="~/image/user.png" alt="user photo" width="40" height="40" />
                        </a>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CourseAssignment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    


</body>
</html>
